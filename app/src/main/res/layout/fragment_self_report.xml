<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.SelfReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ema_box_spacing">

        <include
            layout="@layout/question1_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ema_box_marginhorizontal"
            android:layout_marginTop="@dimen/ema_box_spacing" />

        <include
            layout="@layout/question2_confident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ema_box_marginhorizontal"
            android:layout_marginTop="@dimen/ema_box_spacing" />

        <include
            layout="@layout/question3_yourway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ema_box_marginhorizontal"
            android:layout_marginTop="@dimen/ema_box_spacing" />

        <include
            layout="@layout/question4_difficulties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ema_box_marginhorizontal"
            android:layout_marginTop="@dimen/ema_box_spacing" />

        <include
            layout="@layout/question5_stresslvl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ema_box_marginhorizontal"
            android:layout_marginTop="@dimen/ema_box_spacing" />

        <include
            layout="@layout/question6_social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ema_box_marginhorizontal"
            android:layout_marginTop="@dimen/ema_box_spacing" />

        <include
            layout="@layout/question7_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ema_box_marginhorizontal"
            android:layout_marginTop="@dimen/ema_box_spacing" />

        <include
            layout="@layout/question8_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ema_box_marginhorizontal"
            android:layout_marginTop="@dimen/ema_box_spacing" />

    </LinearLayout>

</ScrollView>