<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvQuestion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. 중요한 일을 통제할 수 없다고 느낀 적이 얼마나 자주 있습니까?"
        android:textColor="@color/black"
        android:textSize="@dimen/ema_question_textsize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How often have you felt that you were unable to control the important things?"
        android:textColor="@color/black"
        android:textSize="@dimen/ema_question_textsize"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/ema_mid_spacing"
        android:background="#888" />

    <RadioGroup
        android:id="@+id/rgQuestion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ema_mid_spacing">

        <RadioButton
            android:id="@+id/rbFrequency0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frequency0" />

        <RadioButton
            android:id="@+id/rbFrequency1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frequency1" />

        <RadioButton
            android:id="@+id/rbFrequency2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frequency2" />

        <RadioButton
            android:id="@+id/rbFrequency3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frequency3" />

        <RadioButton
            android:id="@+id/rbFrequency4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frequency4" />

    </RadioGroup>

</LinearLayout>